<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maincuentas"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente"
        android:id="@+id/tvC_Idcliente" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente"
        android:id="@+id/tvC_cliente" />
<AutoCompleteTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/cliente"
    android:id="@+id/buscadorClienteCuentas"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edittelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:enabled="true"
            android:hint="Telefono"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/editdireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:enabled="true"
            android:hint="Direccion"
            android:textSize="13sp" />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1,2,3,4,5,6"
        android:layout_margin="8dp"
        android:id="@+id/tablacuentas">

        <TableRow>
            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:text="Fecha"
                android:padding="8dp"
                />

            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:text="Descripcion"
                android:padding="8dp"
                />

            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:text="salidaC$"
                android:padding="8dp"
                />

            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:text="EntradaC$"
                android:padding="8dp"
                />

            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:text="TotalC$"
                android:padding="8dp"
                />

            <TextView
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_column="1"
                android:text="TC"
                android:padding="8dp"
                />

        </TableRow>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RecyclerCuentas"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </TableLayout>

</LinearLayout>