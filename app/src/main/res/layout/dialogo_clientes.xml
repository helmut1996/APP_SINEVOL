<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Cliente"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nora Castillo"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zona"
            android:layout_margin="15dp"
            android:textAllCaps="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_zona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Managua"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/text_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waspan Sur"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credito"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/text_credito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40,000"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credito Disponible"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/text_credito_disponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,000"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</ScrollView>